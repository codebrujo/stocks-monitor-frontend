{
    "name": "stocks-monitor-frontend",
    "version": "1.0.0",
    "description": "Stock Monitor (frontend)",
    "main": "index.js",
    "scripts": {
        "build": "npm run tsc && webpack --mode production",
        "dev": "webpack serve --hot --config webpack.dev.config.js --mode development",
        "devc": "concurrently \"tsc -w\" \"webpack serve --hot --config webpack.dev.config.js --mode development\"",
        "test": "jest --coverage",
        "testw": "jest --watchAll",
        "tscw": "tsc -w",
        "tsc": "tsc",
        "precommit": "lint-staged"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/codebrujo/stocks-monitor-frontend.git"
    },
    "author": "Sergey Ogarkov",
    "license": "ISC",
